<%= @organization.name %><br />
<%= button_to "Edit", edit_organization_path(@organization), :method => 'get' %>
<%= button_to "Delete", organization_path(@organization), :method => 'delete' %>
<br />
<% if !!@opportunities %>
  Opportunities<br />
  <% @opportunities.each do |opportunity| %>
  Name: <%= link_to "#{opportunity.name}", organization_opportunity_path(@organization, opportunity) %> ||
  Status: <%= opportunity.status %><br />
  <br />
  <% end %>
<% end %>
<%= link_to "Create an Opportunity at #{@organization.name}", new_organization_opportunity_path(@organization) %>
