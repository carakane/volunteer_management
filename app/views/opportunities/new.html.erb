<%= form_for @opportunity do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :status %>
  <%= f.collection_select :status, Opportunity.status, :id, :name %>
  <%= f.collection_select :organization_id, current_user.organizations.all, :id, :name %>
  <!-- :organization_id, :volunteer_id -->
  <%= f.submit %>
<% end %>
