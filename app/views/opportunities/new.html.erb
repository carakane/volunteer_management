<%= form_for @opportunity do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
  <%= f.label :status %>
  <%= f.collection_select :status, Opportunity.statuses.keys, :to_s, :titlecase %>

  <% if @organization.present? %>
    <%= f.collection_select :organization_id, @user.organizations.all, :id, :name, :required => true, :selected => @organization.id %>
  <% else %>
    <%= f.collection_select :organization_id, @user.organizations.all, :id, :name, :required => true %>
  <% end %>

  <%= f.collection_select :day, Opportunity.days.keys, :to_s, :titlecase %>
  <%= f.submit %>
<% end %>
