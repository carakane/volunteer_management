<% if opportunity.volunteer.present? %>
   || Volunteer: <%= link_to opportunity.volunteer.name, volunteer_path(opportunity.volunteer) %>
  <%= button_to "Mark As Completed", organization_opportunity_path(organization, opportunity), method: :patch, params: {'opportunity[status]' => "completed"} %>
<% else %>
  <%= form_for opportunity do |f| %>
    Available Volunteers: <%= f.collection_select :volunteer_id, volunteers, :id, :name %>
    <%= f.submit %>
  <% end %>  <br />
<% end %>
