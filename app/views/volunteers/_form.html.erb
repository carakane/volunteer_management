<%= form_for volunteer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  Check available days:<br />
  <%= f.fields_for :availability do |availability| %>
    <%= availability.label :monday %>
    <%= availability.check_box :monday, {}, true, false %>
    <%= availability.label :tuesday %>
    <%= availability.check_box :tuesday, {}, true, false %>
    <%= availability.label :wednesday %>
    <%= availability.check_box :wednesday, {}, true, false %>
    <%= availability.label :thursday %>
    <%= availability.check_box :thursday, {}, true, false  %>
    <%= availability.label :friday %>
    <%= availability.check_box :friday, {}, true, false  %>
    <%= availability.label :saturday %>
    <%= availability.check_box :saturday, {}, true, false  %>
    <%= availability.label :sunday %>
    <%= availability.check_box :sunday, {}, true, false  %>
  <% end %>
<br />

  <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name %><br>

  <%= f.fields_for :skills, volunteer.skills.build do |skill| %>
    <%= skill.label "Skill" %>
    <%= skill.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
