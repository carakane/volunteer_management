<!DOCTYPE html>
<html>
<head>
  <title>VolunteerManager</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%# binding.pry %>
  <% if File.exist?("app/assets/javascripts/#{params[:controller]}_#{params[:action]}.js") %>
    <%= javascript_include_tag "#{params[:controller]}_#{params[:action]}" %>
  <% end %>
  <%= csrf_meta_tags %>
  <style>
  header {
    border-bottom: 1px solid black;
    text-align: center;
  }
  footer {
    border-top: 1px solid black;
    text-align: center;
  }
  .field_with_errors {
    padding: 2px;
    background-color: red;
    display: table;
  }
  #error_explanation {
    padding: 2px;
    color: red;
    display: table;
  }
  </style>
</head>
<body class="<%= controller_name %> <%= action_name %>">

  <%= render 'layouts/header' %>
  <%= render 'layouts/flash' %>
  <br />

<%= yield %>

<%= render 'layouts/footer' %>

</body>
</html>
